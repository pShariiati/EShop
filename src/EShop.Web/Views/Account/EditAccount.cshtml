@model EShop.ViewModels.Account.EditAccountViewModel

@{
    ViewData["Title"] = "ویرایش حساب کاربری";
}

<div class="container">
    <h3>
        @ViewData["Title"]
        <br />
        <a asp-action="Index" asp-controller="Home" class="mt-3 btn btn-outline-info">بازگشت</a>
    </h3>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="EditAccount" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" />
                <div class="form-group my-3">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div id="passwordHelp" class="form-text">
                        در صورتیکه تمایل به تغییر رمز عبور دارید آن را تغییر دهید
                    </div>
                </div>
                <div class="form-group my-3">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <label asp-for="Avatar" class="control-label"></label>
                    <input asp-for="Avatar" class="form-control" />
                    <span asp-validation-for="Avatar" class="text-danger"></span>
                    <div id="passwordHelp" class="form-text">
                        در صورتیکه تمایل به تغییر آواتار خود را دارید آن را تغییر دهید
                    </div>
                </div>
                <div class="form-group my-3">
                    <input type="submit" value="ویرایش" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>