@model EShop.ViewModels.Account.ResetPasswordViewModel

@{
    ViewData["Title"] = "بازنشانی رمز عبور";
}

<div class="container">
    <h4>@ViewData["Title"]</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="ResetPassword">
                <input asp-for="Token" value="@ViewData["Token"]" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <input type="submit" value="بازنشانی" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>