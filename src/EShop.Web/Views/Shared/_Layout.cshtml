@using EShop.ViewModels.Account
@using EShop.Common.Constants
@using EShop.Common.Extensions
<!doctype html>
<html lang="fa" dir="rtl">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.rtl.min.css"
          integrity="sha384-gXt9imSW0VcJVHezoNQsP+TNrjYXoGcrqBZJpry9zJt8PCQjobwmhMGaDHTASo9N" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/custom.css">
    @await RenderSectionAsync("Tags", false)
    @await RenderSectionAsync("Css", false)
    <title>فروشگاه اینترنتی | @ViewData["Title"]</title>
</head>

<body>
    <div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1"
         id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasScrollingLabel">سبد خرید شما</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="text-center mt-5 d-none" id="cart-details-loading">
            <img src="/images/application/loading.gif" width="50" alt="لصفا صبر کنید ..." />
        </div>
        <div class="offcanvas-body">
            <h3 class="text-center">
                ابتدا وارد سایت شوید
            </h3>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="https://getbootstrap.com/docs/5.1/assets/brand/bootstrap-logo.svg" alt="عکس برند" width="30"
                     height="24" class="d-inline-block align-text-top">
                فروشگاه اینترنی
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">خانه</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="Product" asp-action="Index">محصولات</a>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Product" asp-action="Index" id="navbar-search-form" method="get">
                            <div class="input-group">
                                <input type="text" value="@ViewBag.SearchKey" name="s" class="form-control" placeholder="نام کالا ..."
                                       aria-label="Recipient's username" aria-describedby="basic-addon2">
                                <span class="input-group-text bg-primary text-white" id="basic-addon2"
                                      onclick="$('form#navbar-search-form').submit()" style="cursor: pointer;">جستجو</span>
                            </div>
                        </form>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <button id="checkout-button" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling"
                                aria-controls="offcanvasScrolling" class="text-right btn btn-primary">
                            سبد خرید شما
                            &nbsp;
                            &nbsp;
                            <i class="bi bi-cart-plus-fill"></i>
                            &nbsp;
                            (<span>0</span>)
                            تومان
                        </button>
                    </li>
                    &nbsp;
                    <li class="nav-item">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="user-avatar-dropdown"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/images/avatars/@User.Identity.GetUserAvatar()" width="25" class="rounded-circle"
                                         alt="Alternate Text" />
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end text-center"
                                    aria-labelledby="user-avatar-dropdown">
                                    <li style="cursor: default">
                                        سلام
                                        @User.Identity.GetUserFullName()
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-action="MyCarts" asp-controller="Cart">
                                            سفارشات من
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-action="EditAccount" asp-controller="Account">
                                            ویرایش پروفایل
                                        </a>
                                    </li>
                                    @if (User.IsInRole(IdentityRoleNames.Admin))
                                    {
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li><a class="dropdown-item" asp-action="Index" , asp-controller="Home" asp-area="Admin">منوی مدیریت</a></li>
                                    }
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <form asp-action="Logout" asp-controller="Account" asp-area="">
                                            <button type="submit" class="dropdown-item">خروج</button>
                                            @*<a class="dropdown-item" href="#">خروج</a>*@
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <button class="btn btn-outline-secondary" data-bs-toggle="modal"
                                    data-bs-target="#login-register-modal">
                                ورود / ثبت نام
                            </button>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <br />
    @RenderBody()
    <footer class="bg-light text-center text-lg-start">
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            تمامی حقوق محفوظ است
            <a class="text-dark" href="https://www.eshop.com">eshop.com</a>
        </div>
        <!-- Copyright -->
    </footer>

    <div class="modal fade" tabindex="-1" id="login-register-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">ثبت نام/ ورود</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="profile-tab" data-bs-toggle="tab"
                                    data-bs-target="#login-tab-place" type="button" role="tab" aria-controls="login-tab"
                                    aria-selected="false">
                                ورود
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register-tab-place"
                                    type="button" role="tab" aria-controls="home" aria-selected="true">
                                ثبت نام
                            </button>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="login-tab-place" role="tabpanel" aria-labelledby="login-tab">
                            @*<partial name="_LoginPartial" model="new LoginViewModel()" />*@
                            <div class="text-center mt-3">
                                <img src="/images/application/loading.gif" alt="لطفا صبر کنید ..." width="50" />
                            </div>
                        </div>
                        <div class="tab-pane fade" id="register-tab-place" role="tabpanel" aria-labelledby="register-tab">
                            @*<partial name="_RegisterPartial" model="new RegisterViewModel()" />*@
                            <div class="text-center mt-3">
                                <img src="/images/application/loading.gif" alt="لطفا صبر کنید ..." width="50" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js" integrity="sha512-DedNBWPF0hLGUPNbCYfj8qjlEnNE92Fqn7xd3Sscfu7ipy7Zu33unHdugqRD3c4Vj7/yLv+slqZhMls/4Oc7Zg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @*<script src="https://www.google.com/recaptcha/api.js?hl=fa&onload=onloadCaptchaCallback&render=explicit" async defer></script>*@
    <script>
        var isUserAuthenticated = @User.Identity.IsAuthenticated.ToString().ToLower();
    </script>
    @await RenderSectionAsync("Scripts", false)
    <script src="~/js/custom.js" asp-append-version="true"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    -->
</body>

</html>